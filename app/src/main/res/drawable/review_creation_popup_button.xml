<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/black" android:endColor="@color/black" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/lighter_black" />
            <gradient android:angle="-90" android:startColor="@color/lighter_black" android:endColor="@color/lighter_black" />
        </shape>
    </item>
</selector>