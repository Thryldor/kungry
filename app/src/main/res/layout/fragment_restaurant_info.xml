<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".ui.map.RestaurantInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/restaurant_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/snackbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/sf_ui_display_heavy"
            android:text="@string/snackbar_title"
            android:textColor="@color/lighter_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/snackbar_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_ui_display_light"
            android:text="@string/snackbar_description"
            android:textColor="@color/lighter_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/snackbar_title"
            app:layout_constraintTop_toBottomOf="@+id/snackbar_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>